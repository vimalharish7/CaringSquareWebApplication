@model IEnumerable<CaringSquareApp.Models.Participant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container">
    <h2>Participant List</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocialEvent.EventName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialEvent.EventName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ParticipantId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ParticipantId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ParticipantId })
                </td>
            </tr>
        }

    </table>
</div>