    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
</head>
<body
      style="padding-top: 0px;
        padding-bottom: 0px;">
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center"
            style="background-color:#94D16A">
        
        <br />
        <div class="container d-flex align-items-center">
            <div class="logo mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <h1 class="text-light"><a href="/Home/Dashboard"><span>CaringSquare</span></a></h1>
                }
                else
                {
                    <h1 class="text-light"><a href="/Home"><span>CaringSquare</span></a></h1>
                }
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Knowledge Hub", "About", "Home")</li>
                    }
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Event Spots", "Index", "POIs")</li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Friends List", "Index", "FriendLists")</li>
                        <li>@Html.ActionLink("Events List", "Index", "SocialEvents")</li>
                        <li>@Html.ActionLink("Participant List", "Index", "Participants")</li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>

            </nav><!-- .nav-menu -->

        </div>
    </header><!-- End Header -->
