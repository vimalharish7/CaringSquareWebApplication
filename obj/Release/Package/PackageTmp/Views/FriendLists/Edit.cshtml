@model CaringSquareApp.Models.FriendList

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style = "font-weight: bold;margin-top:80px;margin-left:80px;margin-right:80px;">
        <h4><strong>Friend List</strong></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FriendId)

        <div class="form-group">
            @Html.LabelFor(model => model.UserUserId, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserUserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserUserId, "", new { @class = "text-danger" })
                <p style="color:#31943b;margin-top:5px;font-weight: normal;">
                    <strong>Tips:</strong>Identify your friend from the drop-down list
                </p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" id="buttonedit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style = "margin-left:80px;margin-right:80px;">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
